<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--左边布局(头像)-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="46dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/sonny"
        android:layout_height="46dp" />
    <!--右边布局(详细信息)-->
    <LinearLayout
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <!--第一行-->
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="33dp"
                android:id="@+id/tv_name"
                android:textSize="11.5sp"
                android:textColor="#797878"
                android:text="爱丽斯梦游仙境"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="110dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_xing_black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_xing_black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_xing_black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_xing_black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/icon_xing_black"/>

                <TextView
                    android:id="@+id/tv_start_count"
                    android:textSize="11.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    />
            </LinearLayout>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_time"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:text="06 25"/>
        </RelativeLayout>
        <!--第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_tag1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="这个导师很牛逼"
                android:textSize="10sp"
                android:textColor="#313131"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_withe_black_corner"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_tag2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="这个导师很牛逼"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#313131"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_withe_black_corner"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_tag3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="这个导师很牛逼"
                android:textSize="10sp"
                android:textColor="#313131"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_withe_black_corner"/>
        </LinearLayout>
        <!--第三行-->
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/separate_line"
        android:layout_height="0.5dp"/>
</RelativeLayout>
