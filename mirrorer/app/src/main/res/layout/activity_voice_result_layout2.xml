                            <TextView
                                android:text="55555"
                                android:id="@+id/tutor_first_five_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/shape_follow_tv"
