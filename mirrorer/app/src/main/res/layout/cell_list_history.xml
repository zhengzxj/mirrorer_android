<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/app_base_bg_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        
        <LinearLayout
            android:id="@+id/history_video_layout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/app_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/video_play_btn_bg"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/id_video_history_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/app_white"
                android:text="00:32:56"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/history_video_layout">
        <TextView
            android:id="@+id/id_video_history_item_desc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:textSize="16dp"
            android:maxLines="3"
            android:text="如何成为一名产品经理？"
            android:textColor="@color/app_dark_black"
            />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_gray_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/history_cell_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/app_default_head_icon"
            app:civ_border_color="@color/app_white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/history_cell_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-02-19 19:30"
            android:textSize="12dp"
            android:textColor="@color/app_dark_black"
            android:layout_toRightOf="@id/history_cell_image"
            />

        <TextView
            android:id="@+id/history_cell_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peter"
            android:textSize="12dp"
            android:textColor="@color/app_low_black"
            android:layout_toRightOf="@id/history_cell_image"
            android:layout_marginTop="3dp"
            android:layout_below="@id/history_cell_time_tv"
            />


        <TextView
            android:id="@+id/id_video_history_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="¥20"
            android:textSize="12dp"
            android:textColor="@color/app_dark_black"
            />

        <TextView
            android:id="@+id/history_cell_statu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待评价"
            android:textSize="12dp"
            android:textColor="@color/tutor_price_title_color"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/id_video_history_item_price"
            />
    </RelativeLayout>


</LinearLayout>