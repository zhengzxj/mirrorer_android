<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/iv_icon2"
    android:layout_width="103dp"
    android:layout_height="152dp"
    android:src="@drawable/icon2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="160dp"
    />
<TextView
    android:layout_below="@+id/iv_icon2"
    android:layout_marginTop="160dp"
    android:id="@+id/tv_go_register"
    android:layout_width="wrap_content"
    android:background="@drawable/icon_blu"
    android:text="注册"
    android:gravity="center"
    android:textColor="#ffffff"
    android:textSize="18sp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_go_register"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已有账号?"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textColor="#8f9292"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_go_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="立即登录"
            android:padding="5dp"
            android:textColor="#1fbad6"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="2dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>