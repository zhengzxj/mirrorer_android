<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_title_bg_color"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/login_back_iv"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_app_back" />

    <ImageView
        android:id="@+id/login_close_ic"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_logo_login" />
    <EditText
        android:id="@+id/login_phone_edit"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_close_ic"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="手机"
        android:textSize="13sp"
        android:numeric="integer"
        android:textColor="@color/app_dark_black"
        android:textColorHint="#d1d1d1" />
    <TextView
        android:layout_width="192dp"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:background="@color/app_gray_color"
        android:layout_below="@+id/login_phone_edit"
        android:layout_height="0.5dp" />

    <EditText
        android:id="@+id/login_psw_edit"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone_edit"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:hint="密码"
        android:textSize="13sp"
        android:inputType="textPassword"
        android:textColor="@color/app_dark_black"
        android:textColorHint="#d1d1d1" />
        <!--</RelativeLayout>-->
    <TextView
        android:layout_width="192dp"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:background="@color/app_gray_color"
        android:layout_below="@+id/login_psw_edit"
        android:layout_height="0.5dp" />
        <TextView

            android:id="@+id/login_btn"
            android:layout_width="192dp"
            android:layout_height="35dp"
            android:layout_below="@+id/login_psw_edit"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/login_text"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    <TextView
        android:layout_below="@+id/login_btn"
        android:id="@+id/login_forget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/forget_psw_text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#31B3CC"
        android:textSize="12dp" />

