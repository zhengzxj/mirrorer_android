<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_gray">
    <!--真正内容-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--头像-->
        <com.smart.mirrorer.view.CornerImageView
            android:id="@+id/recommon_like_cell_head_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#ffffff" />
<!--名字-->
        <TextView
            android:id="@+id/liked_nick_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recommon_like_cell_head_iv"
            android:layout_marginTop="6dp"
            android:text="1爱丽丝梦游仙境"
            android:textColor="#313131"
            android:textSize="13sp"
            android:textStyle="bold" />
<!--星星-->
        <ImageView
            android:id="@+id/iv_xingxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/recommon_like_cell_right_count_tv"
            android:src="@mipmap/icon_xingxing" />
<!--星星数-->
        <TextView
            android:id="@+id/recommon_like_cell_right_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/recommon_like_cell_video_icon"
            android:gravity="center"
            android:text="5.7"
            android:textColor="#313131"
            android:textSize="12sp"
            android:textStyle="bold" />
<!--公司-->
        <TextView
            android:id="@+id/liked_company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recommon_like_cell_head_iv"
            android:layout_marginTop="1.5dp"
            android:layout_below="@+id/liked_nick_tv"
            android:text="2爱丽丝梦游仙境"
            android:textColor="#7a7a7a"
            android:textSize="13sp" />
<!--职位-->
        <TextView
            android:id="@+id/liked_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recommon_like_cell_head_iv"
            android:layout_marginTop="1.5dp"
            android:layout_below="@+id/liked_company_tv"
            android:text="3爱丽丝梦游仙境"
            android:textColor="#7a7a7a"
            android:textSize="13sp" />
<!--呼叫按钮-->
        <TextView
            android:id="@+id/recommon_like_cell_video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@mipmap/btn_lijihujiao"
            android:gravity="center"
            android:text="立即呼叫"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
<!--首5价格-->
        <TextView
            android:layout_below="@+id/liked_position_tv"
            android:layout_marginTop="3dp"
            android:id="@+id/liked_start_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recommon_like_cell_head_iv"
            android:background="@drawable/shape_follow_tv"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginBottom="5dp"
            android:text="首5分钟:$9999分"
            android:textColor="#70d3aa" />
<!--5分钟后价格-->
        <TextView
            android:id="@+id/liked_minute_price_tv"
            android:layout_below="@+id/liked_position_tv"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/liked_start_price_tv"
            android:background="@drawable/shape_follow_tv"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="5分钟后:$9999/分"
            android:textColor="#70d3aa" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#313131"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dp"/>
</RelativeLayout>