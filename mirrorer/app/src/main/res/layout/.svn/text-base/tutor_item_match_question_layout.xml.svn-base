<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    >

    <TextView
        android:id="@+id/tutor_item_match_rob_tv"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/tutor_rob_btn_bg"
        android:text="抢单"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/app_white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/tutor_item_match_follow_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/tutor_item_match_rob_tv"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_tutor_follow"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/tutor_item_match_question_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tutor_item_match_follow_iv"
        android:singleLine="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="15dp"
        android:textColor="@color/app_dark_black"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_gray_color"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>