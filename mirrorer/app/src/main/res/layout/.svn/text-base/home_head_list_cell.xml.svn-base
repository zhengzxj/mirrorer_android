<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_cell_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/app_default_head_icon"
            app:civ_border_color="@color/app_white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/head_cell_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="@color/app_dark_black"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/head_cell_right_empty_view"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</LinearLayout>