<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/voice_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="聆听中..."
            android:textColor="@color/app_white"
            android:textColorHint="@color/app_white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/voice_result_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的问题"
            android:textColor="@color/app_white"
            android:background="@color/app_black"
            android:textColorHint="@color/app_white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/voice_edit_tv"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="4dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/voice_edit_bg"
            android:gravity="center"
            android:text="点击编辑"
            android:textColor="@color/voice_edit_gray"
            android:textSize="15dp"
            android:visibility="invisible" />
    </LinearLayout>


    <ImageView
        android:id="@+id/voice_cancle_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="52dp"
        android:src="@drawable/voice_cancel_icon" />

    <ImageView
        android:id="@+id/voice_finish_iv"
        android:layout_width="46dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="52dp"
        android:src="@drawable/voice_finish_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/voice_wave_one"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/voice_replly" />

    <ImageView
        android:id="@+id/voice_wave_two"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/voice_replly" />

    <ImageView
        android:id="@+id/voice_wave_three"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/voice_replly" />

    <ImageView
        android:id="@+id/voice_layout_iv"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/home_voice_icon_bg" />

    <TextView
        android:id="@+id/voice_pub_iv"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/voice_call_tv_bg"
        android:gravity="center"
        android:text="呼叫"
        android:textColor="@color/app_white"
        android:textSize="20dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/voice_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp" />

</RelativeLayout>