<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_title_bg_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_close_ic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="18dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_app_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/login_top_bg">

            <EditText
                android:id="@+id/login_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="@string/phone_num_text"
                android:numeric="integer"
                android:textColor="@color/app_dark_black"
                android:textColorHint="#d1d1d1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/login_bottom_bg">

            <ImageView
                android:id="@+id/login_psw_eye_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/change_psw_state_colose" />

            <EditText
                android:id="@+id/login_psw_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/login_psw_eye_iv"
                android:background="@null"
                android:hint="@string/password_text"
                android:inputType="textPassword"
                android:textColor="@color/app_dark_black"
                android:textColorHint="#d1d1d1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_register_btn_bg"
            android:gravity="center"
            android:text="@string/login_text"
            android:textColor="@color/app_white"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/login_forget_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/forget_psw_text"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#a3a2a2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/login_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/register_text"
                android:textColor="#eb2013"
                android:textSize="15dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>