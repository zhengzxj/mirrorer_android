<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_info_bg_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="申请成为导师  2/5"
        android:textColor="@color/app_black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tutor_typein_seconde_back_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerInside"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_app_back" />

    <ImageView
        android:id="@+id/tutor_typein_second_next_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_base_next" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tutor_typein_second_next_iv"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="186dp"
                android:layout_height="116dp"
                android:layout_marginTop="46dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tutor_second_upload_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="上传工作证或名片"
                    android:textColor="#e93838"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/tutor_second_upload_card_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_upload_card_bg"
                     />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="46dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/tutor_second_now_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_base_info_bg_color"
                    android:hint="现任职位"
                    android:singleLine="true"
                    android:textColor="@color/app_base_4c"
                    android:textColorHint="#cdcdcd"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7d7d7d" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/tutor_second_now_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_base_info_bg_color"
                    android:hint="现在公司"
                    android:singleLine="true"
                    android:textColor="@color/app_base_4c"
                    android:textColorHint="#cdcdcd"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7d7d7d" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/tutor_second_job_years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_base_info_bg_color"
                    android:hint="工作年限"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/app_base_4c"
                    android:textColorHint="#cdcdcd"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7d7d7d" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>