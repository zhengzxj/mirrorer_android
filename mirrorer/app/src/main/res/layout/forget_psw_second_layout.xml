<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_title_bg_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/forget_second_back_iv"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_app_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/login_top_bg">

            <ImageView
                android:id="@+id/forget_psw_eye_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/change_psw_state_colose" />

            <EditText
                android:id="@+id/forger_psw_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/forget_psw_eye_iv"
                android:background="@null"
                android:hint="@string/input_new_psw_text"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/app_dark_black"
                android:textColorHint="#d1d1d1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/login_bottom_bg">

            <EditText
                android:id="@+id/forger_psw_agin_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="@string/input_new_psw_agin_text"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/app_dark_black"
                android:textColorHint="#d1d1d1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forget_finish_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/login_register_btn_bg"
            android:gravity="center"
            android:text="@string/app_finish_text"
            android:textColor="@color/app_white"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>