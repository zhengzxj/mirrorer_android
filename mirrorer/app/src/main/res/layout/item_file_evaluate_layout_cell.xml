<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_evaluata_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <!--第一行信息-->
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_eva_name"
                android:textColor="#797878"
                android:textSize="20sp"
                android:text="名字"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_star"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_xing_black"
                android:layout_width="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_toRightOf="@+id/tv_eva_name"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/iv_star"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06 25"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"/>
        </RelativeLayout>
        <!--第二行信息-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_first_mark"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="这个回答者很妞"
                android:textColor="#313131"
                android:textSize="10sp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@drawable/shape_video_tv"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#313131"
                android:layout_below="@+id/tv_first_mark"
                android:id="@+id/tv_second_mark"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="这个回答者很妞"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_video_tv"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#313131"
                android:layout_below="@+id/tv_second_mark"
                android:id="@+id/tv_third_mark"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="这个回答者很妞"
                android:textSize="10sp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_video_tv"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_company"
                android:gravity="center"
                android:text="公司"
                android:textSize="14sp"
                android:textColor="#313131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:gravity="center"
                android:text="公司"
                android:textSize="14sp"
                android:textColor="#313131"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>