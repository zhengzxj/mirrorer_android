<com.videorecorder.widget.ControlPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_centerInParent="true">
    <com.videorecorder.widget.ProgressView
        android:id="@+id/recorder_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/camera_record_flashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:text="重录"
        android:textSize="14dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/camera_record_selectlocalfile"
        android:layout_width="@dimen/record_action_height"
        android:layout_height="@dimen/record_action_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_localfile_selector"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_bg_light_blue"
        android:gravity="center">

        <ImageView
            android:id="@+id/camera_record_button"
            android:layout_width="@dimen/record_action_height"
            android:layout_height="@dimen/record_action_height"
            android:scaleType="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/camera_record_commitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="下一步"
        android:textSize="14dp"
        android:visibility="visible" />

</com.videorecorder.widget.ControlPanelLayout>