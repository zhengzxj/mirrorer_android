    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="19.5dp"
            android:layout_marginBottom="19.5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_title_logo"
            android:id="@+id/iv_head" />
        <!--中间部分向上左右顶-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--问题内容完全包裹-->
            <TextView
                android:text="如何让评价电影如何让评价电影如如何让评价电影电影如何让评价电影"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:id="@+id/tutor_item_match_question_tv" />
            <TextView
                android:id="@+id/tv_blank"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <!--给上下10dp的padding,然后整天居中-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal"
                android:id="@+id/ll_stu_detail">

                <TextView
                    android:textSize="11sp"
                    android:text="麦当娜麦当娜"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_stu_name" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_xingxing"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:text="5.7"
                    android:textSize="11sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="11dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/recommon_like_cell_right_count_tv" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_wen"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:text="356"
                    android:layout_gravity="center_vertical"
                    android:textSize="11sp"
                    android:layout_marginRight="11dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_q_num" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_back_down"
                android:visibility="gone"
                android:id="@+id/iv_show_more_or_less" />
        </LinearLayout>
        <!--抢单按钮-->
        <TextView
            android:id="@+id/tutor_item_match_rob_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢单"
            android:gravity="center"
            android:background="@drawable/btn_bul"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"/>
    </LinearLayout>
